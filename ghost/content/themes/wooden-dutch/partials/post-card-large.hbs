<article class="post-card post-card-large">
    {{#if feature_image}}
    <a href="{{url}}" class="post-card-image-link">
        <img class="post-card-image" src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy">
    </a>
    {{/if}}
    <div class="post-card-content">
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="post-card-tag">{{primary_tag.name}}</a>
        {{/if}}
        <h3 class="post-card-title"><a href="{{url}}">{{title}}</a></h3>
        {{#if custom_excerpt}}
        <p class="post-card-excerpt">{{custom_excerpt}}</p>
        {{else if excerpt}}
        <p class="post-card-excerpt">{{excerpt words="35"}}</p>
        {{/if}}
        <div class="post-card-meta">
            {{> author-byline}}
        </div>
    </div>
</article>
