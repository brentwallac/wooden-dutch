{{!< default}}

<article class="post-full {{post_class}}">
    <header class="post-header">
        <div class="post-header-inner">
            {{#if primary_tag}}
            <a href="{{primary_tag.url}}" class="post-tag">{{primary_tag.name}}</a>
            {{/if}}
            <h1 class="post-title">{{title}}</h1>
            {{#if custom_excerpt}}
            <p class="post-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            {{> author-byline}}
        </div>
    </header>

    {{#if feature_image}}
    <figure class="post-feature-image">
        <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}

    <section class="post-content">
        {{content}}
    </section>

    <footer class="post-footer">
        {{#if tags}}
        <div class="post-tags">
            {{#foreach tags}}
            <a href="{{url}}" class="post-tags-item">{{name}}</a>
            {{/foreach}}
        </div>
        {{/if}}

        <hr class="section-divider">

        {{#if @custom.show_author_bio_on_post}}
        {{#foreach authors}}
            {{> author-bio}}
        {{/foreach}}
        {{/if}}
    </footer>
</article>

{{#get "posts" filter="id:-{{id}}+tag:{{primary_tag.slug}}" limit="3" include="authors,tags"}}
{{#if posts}}
<aside class="related-posts">
    <div class="related-posts-inner">
        <h3 class="section-heading">Related Stories</h3>
        <div class="post-grid">
            {{#foreach posts}}
                {{> post-card}}
            {{/foreach}}
        </div>
    </div>
</aside>
{{/if}}
{{/get}}
