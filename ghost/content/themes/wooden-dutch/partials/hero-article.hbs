<article class="hero-article {{#match @custom.hero_style 'Text only'}}hero-text-only{{/match}} {{#match @custom.hero_style 'Split'}}hero-split{{/match}}">
    {{#match @custom.hero_style "Full width with image"}}
    {{#if feature_image}}
    <div class="hero-image">
        <a href="{{url}}">
            <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="eager">
        </a>
    </div>
    {{/if}}
    <div class="hero-content">
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="hero-tag">{{primary_tag.name}}</a>
        {{/if}}
        <h2 class="hero-title"><a href="{{url}}">{{title}}</a></h2>
        {{#if custom_excerpt}}
        <p class="hero-excerpt">{{custom_excerpt}}</p>
        {{else if excerpt}}
        <p class="hero-excerpt">{{excerpt words="40"}}</p>
        {{/if}}
        {{> author-byline}}
    </div>
    {{/match}}

    {{#match @custom.hero_style "Text only"}}
    <div class="hero-content">
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="hero-tag">{{primary_tag.name}}</a>
        {{/if}}
        <h2 class="hero-title"><a href="{{url}}">{{title}}</a></h2>
        {{#if custom_excerpt}}
        <p class="hero-excerpt">{{custom_excerpt}}</p>
        {{else if excerpt}}
        <p class="hero-excerpt">{{excerpt words="60"}}</p>
        {{/if}}
        {{> author-byline}}
    </div>
    {{/match}}

    {{#match @custom.hero_style "Split"}}
    {{#if feature_image}}
    <div class="hero-image">
        <a href="{{url}}">
            <img src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="eager">
        </a>
    </div>
    {{/if}}
    <div class="hero-content">
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="hero-tag">{{primary_tag.name}}</a>
        {{/if}}
        <h2 class="hero-title"><a href="{{url}}">{{title}}</a></h2>
        {{#if custom_excerpt}}
        <p class="hero-excerpt">{{custom_excerpt}}</p>
        {{else if excerpt}}
        <p class="hero-excerpt">{{excerpt words="40"}}</p>
        {{/if}}
        {{> author-byline}}
    </div>
    {{/match}}
</article>
