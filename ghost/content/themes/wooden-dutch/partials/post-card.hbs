<article class="post-card">
    {{#if feature_image}}
    <a href="{{url}}" class="post-card-image-link">
        <img class="post-card-image" src="{{img_url feature_image size="m"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy">
    </a>
    {{/if}}
    <div class="post-card-content">
        {{#if primary_tag}}
        <a href="{{primary_tag.url}}" class="post-card-tag">{{primary_tag.name}}</a>
        {{/if}}
        <h3 class="post-card-title"><a href="{{url}}">{{title}}</a></h3>
        {{#if custom_excerpt}}
        <p class="post-card-excerpt">{{custom_excerpt}}</p>
        {{else if excerpt}}
        <p class="post-card-excerpt">{{excerpt words="25"}}</p>
        {{/if}}
        <div class="post-card-meta">
            <span class="post-card-author">{{authors}}</span>
            <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
        </div>
    </div>
</article>
