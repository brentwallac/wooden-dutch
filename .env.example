# AWS Bedrock
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ROLE_ARN=              # Optional: role to assume for Bedrock access
BEDROCK_MODEL_ID=  # Use au. prefix for ap-southeast-2 cross-region inference

# Image Generation (optional — omit to skip feature images)
GEMINI_API_KEY=              # Also accepts GOOGLE_API_KEY as fallback
GEMINI_MODEL_ID=gemini-3-pro-image-preview
# Ghost CMS
GHOST_URL=http://localhost:2368
GHOST_ADMIN_API_KEY=       # Format: {id}:{secret} — get from Ghost Admin → Settings → Integrations
AUTO_PUBLISH=false          # true = publish immediately, false = save as draft

# Scheduler
CRON_SCHEDULE=0 8 * * 1,3,5   # Mon/Wed/Fri at 8am
CRON_TIMEZONE=Australia/Sydney

# Article generation
MAX_TOKENS=4096

# Ghost Docker (used by docker-compose.yml)
GHOST_MAIL_FROM=noreply@example.com
MYSQL_ROOT_PASSWORD=ghost_root_password
MYSQL_PASSWORD=ghost_db_password

# ── Production (Digital Ocean) ──────────────────────────
# Generate strong passwords before deploying:
#   openssl rand -base64 32
# Set GHOST_URL to your public domain:
#   GHOST_URL=https://thedutchwood.com
# Start with: docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d
