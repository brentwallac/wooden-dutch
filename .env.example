# AWS Bedrock
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ROLE_ARN=              # Optional: role to assume for Bedrock access
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-20250514

# Ghost CMS
GHOST_URL=http://localhost:2368
GHOST_ADMIN_API_KEY=       # Format: {id}:{secret} — get from Ghost Admin → Settings → Integrations
AUTO_PUBLISH=false          # true = publish immediately, false = save as draft

# Scheduler
CRON_SCHEDULE=0 8 * * 1,3,5   # Mon/Wed/Fri at 8am
CRON_TIMEZONE=Australia/Sydney

# Article generation
MAX_TOKENS=4096

# Ghost Docker (used by docker-compose.yml)
GHOST_MAIL_FROM=noreply@example.com
MYSQL_ROOT_PASSWORD=ghost_root_password
MYSQL_PASSWORD=ghost_db_password
